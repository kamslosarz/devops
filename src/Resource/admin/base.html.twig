<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no'
          name='viewport'/>
    <title>{% block title %}{% endblock %}</title>
    <link rel="icon" type="image/png" href="{{ asset('admin/assets/img/favicon.ico') }}">
    <link href="{{ asset('admin/assets/css/styles.css') }}" rel="stylesheet"/>
</head>

<body>
<div class="container">
    <div class="header">
        <div class="logo">
            Dashboard
        </div>
    </div>
    <div class="messages">
        {% for message in messages.all %}

            asdasd
        {% endfor %}
    </div>
    <div class="nav">
        <ul>
            <li class="{% if menu.isUri('/admin/index') %}active{% endif %}">
                {{ url('/admin/index', 'pe-7s-graph', 'Dashboard') }}
            </li>
            <li class="{% if menu.isUri('/admin/project/*') %}active{% endif %}">
                {{ url('/admin/project/index', 'pe-7s-science', 'Projects') }}
            </li>
            <li class="{% if menu.isUri('/admin/logout') %}active{% endif %}">
                {{ url('/admin/logout', 'pe-7s-logout', 'Logout') }}
            </li>
        </ul>
    </div>
    <div class="main-content">
        <div class="messages">
            {% for type, message in messages.all %}
                <p class="{{ type }}">{{ message }}</p>
            {% endfor %}
        </div>
        <div class="content">
            {% include 'form/form.html.twig' with {'form': form} %}
        </div>
    </div>
    <div class="footer">

    </div>
</div>
</body>
